#!/sbin/runiscript
# SERVICE: system/hwclock
# NAME: hwclock
# DESCRIPTION:

setup(){
    iregister service
        iset need = system/modules
        iset stdall = /dev/null
        iexec start
        iexec stop
    idone
}

start(){
    /sbin/hwclock --utc --hctosys
}

stop(){
    /sbin/hwclock --utc --systohc
}
