#!/sbin/runiscript
# SERVICE: system/module/any
# NAME: any is a placeholder and is substituted with the service name
# DESCRIPTION: 

setup() {
    iregister service
        iset need = system/depmod
        iset stdall = /dev/null
        iexec start
        iexec stop
    idone
}

start() {
    /sbin/modprobe -q $NAME
}

stop() {
    /sbin/modprobe -q -r $NAME
}
