#!/sbin/runiscript
# SERVICE: system/sysctl
# NAME: sysctl
# DESCRIPTION:

setup() {
    iregister service
        iset need = system/hostname
        iexec start
    idone
}

start() {
    if [ -d /etc/sysctl.d ]; then
        for conf in /etc/sysctl.d/*.conf
        do
            sysctl -n -e -q -p "${conf}"
        done
    elif [ -f /etc/sysctl.conf ]; then
        sysctl -n -e -q -p;
    else
        exit 1
    fi
}
