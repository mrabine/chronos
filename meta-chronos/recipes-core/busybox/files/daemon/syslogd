#!/sbin/runiscript
# SERVICE: daemon/syslogd
# NAME: syslogd
# DESCRIPTION:

RUN_PATH="/run"
PID_FILE="${RUN_PATH}/syslogd.pid"

LOG_PATH="/var/volatile/log"

setup(){
    iregister daemon
        iset need = system/modules
        iset pid_file = ${PID_FILE}
        iset respawn_pause = 1
        iset respawn_rate = 0
        iset respawn
        iexec daemon
    idone
}

daemon(){
    mkdir -m 0755 -p ${RUN_PATH} ${LOG_PATH}
    exec /sbin/syslogd -n
}
